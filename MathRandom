package sample;

public class Sample 
{
    public static void main(String[] args) 
    {
        int a, b;
        double answer;
        
        System.out.println("Sample Console Program 3 - Double and Math.random()");
       
        a = (int)(Math.random()* 10 + 1);
        b = (int)(Math.random()* 10 + 1);
        
        //this calculates the answer by adding the a and b variable together
        //this statement is wrong and must not be taken literally
        answer = a + b;
        
        System.out.println("" + a + " + " + b + " = " + answer);
        System.out.println("hi");
    }
}

